{
  "compilerOptions": {
    "declarationDir": "dist",
    "outDir": "dist",
    "baseUrl": ".",
    "module": "es6",
    "target": "es2017",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}