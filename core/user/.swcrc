{
  "test": ".*.ts$",
  "exclude": ["dist", "node_modules", ".*.js$", ".*.map$"],
  "jsc": {
    "target": "es2022",
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": false
    },
    "transform": {
      "legacyDecorator": true
    }
  },
  "sourceMaps": "inline",
  "inlineSourcesContent": true,
  "module": {
    "type": "commonjs",
    "strict": false,
    "strictMode": true,
    "lazy": false,
    "noInterop": false
  }
}